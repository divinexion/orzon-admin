<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Return Details - {{returnItem.product.name}} | ORZON Admin</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
  <style>
    :root {
      --sidebar-width: 280px;
      --primary-gradient: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
      --secondary-gradient: linear-gradient(135deg, #f093fb 0%, #f5576c 100%);
    }

    body {
      background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
      min-height: 100vh;
      font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .main-content {
      margin-left: var(--sidebar-width);
      padding: 2rem;
      min-height: 100vh;
    }

    .detail-card {
      background: white;
      border-radius: 15px;
      box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
      overflow: hidden;
      margin-bottom: 2rem;
    }

    .detail-header {
      background: var(--primary-gradient);
      color: white;
      padding: 2rem;
    }

    .status-badge {
      font-size: 0.85rem;
      padding: 0.5rem 1rem;
      border-radius: 25px;
    }

    .info-row {
      padding: 1rem 0;
      border-bottom: 1px solid #f8f9fa;
    }

    .info-row:last-child {
      border-bottom: none;
    }

    .info-label {
      font-weight: 600;
      color: #6c757d;
      font-size: 0.9rem;
    }

    .info-value {
      color: #495057;
      font-weight: 500;
    }

    .btn-custom {
      background: var(--primary-gradient);
      border: none;
      border-radius: 25px;
      padding: 0.75rem 1.5rem;
      color: white;
      font-weight: 500;
      transition: all 0.3s;
    }

    .btn-custom:hover {
      transform: translateY(-2px);
      box-shadow: 0 5px 15px rgba(102, 126, 234, 0.3);
      color: white;
    }

    .section-title {
      color: #495057;
      font-weight: 600;
      margin-bottom: 1.5rem;
      padding-bottom: 0.5rem;
      border-bottom: 2px solid #e9ecef;
    }

    @media (max-width: 768px) {
      .main-content {
        margin-left: 0;
        padding: 1rem;
      }
    }
  </style>
</head>

<body>
  {{> sidebar}}

  <main class="main-content">
    <div class="d-flex justify-content-between align-items-center mb-4">
      <div>
        <h1 class="h3 mb-1" style="color: #495057; font-weight: 700;">Return Details</h1>
        <p class="text-muted mb-0">Detailed information about return #{{returnItem._id}}</p>
      </div>
      <div>
        <a href="/returns" class="btn btn-custom">
          <i class="bi bi-arrow-left me-2"></i>Back to Returns
        </a>
      </div>
    </div>

    <!-- Return Status Card -->
    <div class="detail-card">
      <div class="detail-header">
        <div class="d-flex justify-content-between align-items-center">
          <div>
            <h2 class="h4 mb-1">Return #{{returnItem._id}}</h2>
            <p class="mb-0 opacity-75">{{returnItem.product.name}}</p>
          </div>
          <div class="text-end">
            <span class="status-badge bg-light text-dark">
              <i class="bi bi-arrow-return-left me-1"></i>
              {{returnItem.returnReason}}
            </span>
          </div>
        </div>
      </div>

      <div class="p-4">
        <div class="row">
          <div class="col-md-6">
            <div class="info-row">
              <div class="info-label">Return Date</div>
              <div class="info-value">
                <i class="bi bi-calendar me-2 text-muted"></i>
                {{formatDate returnItem.returnDate}}
              </div>
            </div>
            <div class="info-row">
              <div class="info-label">Return Reason</div>
              <div class="info-value">
                <i class="bi bi-exclamation-triangle me-2 text-warning"></i>
                {{returnItem.returnReason}}
              </div>
            </div>
            <div class="info-row">
              <div class="info-label">Serial Number</div>
              <div class="info-value">
                <code class="bg-light px-2 py-1 rounded">{{returnItem.product.serialNumber}}</code>
              </div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="info-row">
              <div class="info-label">Product Type</div>
              <div class="info-value">
                <i class="bi bi-box me-2 text-primary"></i>
                {{returnItem.product.productType}} - {{returnItem.product.typeCapacity}}GB
              </div>
            </div>
            <div class="info-row">
              <div class="info-label">Platform</div>
              <div class="info-value">
                <i class="bi bi-shop me-2 text-success"></i>
                {{returnItem.product.platform}}
              </div>
            </div>
            {{#if returnItem.product.source}}
            <div class="info-row">
              <div class="info-label">Source</div>
              <div class="info-value">
                <i class="bi bi-geo-alt me-2 text-info"></i>
                {{returnItem.product.source}}
              </div>
            </div>
            {{/if}}
          </div>
        </div>
      </div>
    </div>

    <!-- Customer Information -->
    <div class="detail-card">
      <div class="p-4">
        <h3 class="section-title">
          <i class="bi bi-person me-2"></i>Customer Information
        </h3>
        <div class="row">
          <div class="col-md-6">
            <div class="info-row">
              <div class="info-label">Customer Name</div>
              <div class="info-value">
                <i class="bi bi-person me-2 text-muted"></i>
                {{returnItem.customerName}}
              </div>
            </div>
            <div class="info-row">
              <div class="info-label">Email</div>
              <div class="info-value">
                <i class="bi bi-envelope me-2 text-muted"></i>
                <a href="mailto:{{returnItem.customerEmail}}" class="text-decoration-none">{{returnItem.customerEmail}}</a>
              </div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="info-row">
              <div class="info-label">Phone</div>
              <div class="info-value">
                <i class="bi bi-phone me-2 text-muted"></i>
                <a href="tel:{{returnItem.customerPhone}}" class="text-decoration-none">{{returnItem.customerPhone}}</a>
              </div>
            </div>
            <div class="info-row">
              <div class="info-label">Address</div>
              <div class="info-value">
                <i class="bi bi-geo-alt me-2 text-muted"></i>
                {{returnItem.customerAddress}}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Purchase Information -->
    <div class="detail-card">
      <div class="p-4">
        <h3 class="section-title">
          <i class="bi bi-receipt me-2"></i>Purchase Information
        </h3>
        <div class="row">
          <div class="col-md-6">
            <div class="info-row">
              <div class="info-label">Sale Date</div>
              <div class="info-value">
                <i class="bi bi-calendar me-2 text-muted"></i>
                {{#if returnItem.product.saleDate}}
                  {{formatDate returnItem.product.saleDate}}
                {{else}}
                  <span class="text-muted">Not recorded</span>
                {{/if}}
              </div>
            </div>
            <div class="info-row">
              <div class="info-label">Sale Price</div>
              <div class="info-value">
                <i class="bi bi-currency-rupee me-2 text-success"></i>
                {{#if returnItem.product.salePrice}}
                  â‚¹{{returnItem.product.salePrice}}
                {{else}}
                  <span class="text-muted">Not recorded</span>
                {{/if}}
              </div>
            </div>
          </div>
          <div class="col-md-6">
            <div class="info-row">
              <div class="info-label">Warranty Status</div>
              <div class="info-value">
                <i class="bi bi-shield me-2 text-muted"></i>
                {{#if returnItem.product.warrantyRegistered}}
                  <span class="badge bg-success">Registered</span>
                {{else}}
                  <span class="badge bg-warning">Not Registered</span>
                {{/if}}
              </div>
            </div>
            <div class="info-row">
              <div class="info-label">Purchase Platform</div>
              <div class="info-value">
                <i class="bi bi-shop me-2 text-muted"></i>
                {{returnItem.product.platform}}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>

    <!-- Return Details -->
    {{#if returnItem.returnDetails}}
    <div class="detail-card">
      <div class="p-4">
        <h3 class="section-title">
          <i class="bi bi-chat-text me-2"></i>Return Details
        </h3>
        <div class="bg-light p-3 rounded">
          <p class="mb-0">{{returnItem.returnDetails}}</p>
        </div>
      </div>
    </div>
    {{/if}}

    <!-- Actions -->
    <div class="detail-card">
      <div class="p-4">
        <h3 class="section-title">
          <i class="bi bi-tools me-2"></i>Actions
        </h3>
        <div class="d-flex gap-3">
          <button class="btn btn-outline-primary" onclick="window.print()">
            <i class="bi bi-printer me-2"></i>Print Details
          </button>
          <a href="mailto:{{returnItem.customerEmail}}" class="btn btn-outline-success">
            <i class="bi bi-envelope me-2"></i>Contact Customer
          </a>
          <button class="btn btn-outline-info" onclick="copyToClipboard('{{returnItem._id}}')">
            <i class="bi bi-clipboard me-2"></i>Copy Return ID
          </button>
        </div>
      </div>
    </div>
  </main>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  <script>
    function copyToClipboard(text) {
      navigator.clipboard.writeText(text).then(function() {
        alert('Return ID copied to clipboard!');
      });
    }
  </script>
</body>

</html>