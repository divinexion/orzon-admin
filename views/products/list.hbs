<!-- Warranty Statistics -->
<div class="row mb-4">
  <div class="col-12">
    <div class="card">
      <div class="card-body">
        <h5 class="card-title mb-3">
          <i class="bi bi-shield-fill me-2" style="color: #667eea;"></i>
          Warranty Overview
        </h5>
        <div class="row text-center">
          <div class="col-md-3">
            <div class="p-3 border rounded">
              <i class="bi bi-clock-history fs-3 text-warning"></i>
              <h4 class="mt-2">{{stats.warranty.totalPending}}</h4>
              <p class="mb-0 text-muted">Pending Approval</p>
            </div>
          </div>
          <div class="col-md-3">
            <div class="p-3 border rounded">
              <i class="bi bi-check-circle fs-3 text-success"></i>
              <h4 class="mt-2">{{stats.warranty.totalActive}}</h4>
              <p class="mb-0 text-muted">Active Warranties</p>
            </div>
          </div>
          <div class="col-md-3">
            <div class="p-3 border rounded">
              <i class="bi bi-x-circle fs-3 text-danger"></i>
              <h4 class="mt-2">{{stats.warranty.totalExpired}}</h4>
              <p class="mb-0 text-muted">Expired</p>
            </div>
          </div>
          <div class="col-md-3">
            <div class="p-3 border rounded">
              <i class="bi bi-shield fs-3 text-primary"></i>
              <h4 class="mt-2">{{stats.warranty.totalRegistered}}</h4>
              <p class="mb-0 text-muted">Total Registered</p>
            </div>
          </div>
        </div>
        {{#if stats.warranty.totalPending}}
        <div class="alert alert-warning mt-3 mb-0">
          <i class="bi bi-exclamation-triangle me-2"></i>
          You have <strong>{{stats.warranty.totalPending}}</strong> warranty requests pending approval.
          <a href="/products/warranty-requests?status=pending" class="alert-link">Review now â†’</a>
        </div>
        {{/if}}
      </div>
    </div>
  </div>
</div>

<div class="filter-card">
  <h5 class="mb-3"><i class="bi bi-funnel me-2"></i> Filters</h5>
  <form method="get" action="/products">
    <!-- First Row: Main Filters -->
    <div class="row g-3 mb-3">
      <div class="col-md-4">
        <label class="form-label">Search</label>
        <div class="input-group">
          <span class="input-group-text"><i class="bi bi-search"></i></span>
          <input type="text" class="form-control" name="q" value="{{filters.q}}" placeholder="Name, Serial, Description..." />
        </div>
      </div>
      <div class="col-md-4">
        <label class="form-label">Type Capacity</label>
        <select class="form-select" name="type">
          <option value="">All Capacities</option>
          {{#each capacities}}
            <option value="{{this}}" {{#if (eq ../filters.type this)}}selected{{/if}}>{{this}} GB</option>
          {{/each}}
        </select>
      </div>
      <div class="col-md-4">
        <label class="form-label">Platform</label>
        <select class="form-select" name="platform">
          <option value="">All Platforms</option>
          {{#each platforms}}
            <option value="{{this}}" {{#if (eq ../filters.platform this)}}selected{{/if}}>{{capitalize this}}</option>
          {{/each}}
        </select>
      </div>
    </div>
    
    <!-- Second Row: Buyer Search and Actions -->
    <div class="row g-3 align-items-end">
      <div class="col-md-6">
        <label class="form-label">Buyer Information</label>
        <div class="input-group">
          <span class="input-group-text"><i class="bi bi-person"></i></span>
          <input type="text" class="form-control" name="buyer" value="{{filters.buyer}}" placeholder="Search by buyer name, phone, or email..." />
        </div>
      </div>
      <div class="col-md-6">
        <div class="d-flex gap-2">
          <button class="btn btn-primary flex-fill" type="submit">
            <i class="bi bi-funnel-fill me-2"></i> Apply Filters
          </button>
          <a href="/products" class="btn btn-outline-secondary flex-fill">
            <i class="bi bi-arrow-clockwise me-2"></i> Reset All
          </a>
        </div>
      </div>
    </div>
  </form>
</div>

<div class="card">
  <div class="card-body p-0">
    <div class="table-responsive">
      <table class="table table-hover mb-0">
        <thead>
          <tr>
            <th>Serial Number</th>
            {{!-- <th>Type</th> --}}
            <th>Capacity</th>
            <th>Platform</th>
            <th>Buyer</th>
            <th>Status</th>
            <th>Sold Date</th>
            <th class="text-center">Actions</th>
          </tr>
        </thead>
        <tbody>
          {{#if items.length}}
            {{#each items}}
              <tr>
                <td>
                  <span class="badge bg-secondary product-badge">{{serialNumber}}</span>
                </td>
                {{!-- <td> --}}
                  {{!-- <strong>{{name}}</strong> --}}
                  {{!-- {{#if description}}
                    <br><small class="text-muted">{{description}}</small>
                  {{/if}} --}}
                {{!-- </td> --}}
                {{!-- <td>{{productType}}</td> --}}
                <td><span class="badge bg-info text-dark">{{typeCapacity}} GB</span></td>
                <td>
                  {{#if platform}}
                    <span class="badge bg-primary">{{capitalize platform}}</span>
                  {{else}}
                    <span class="badge bg-secondary">Unknown</span>
                  {{/if}}
                </td>
                <td>
                  {{#if buyer.name}}
                    <div>
                      <strong>{{buyer.name}}</strong>
                      {{#if buyer.email}}<br><small class="text-muted">{{buyer.email}}</small>{{/if}}
                    </div>
                  {{else}}
                    <span class="text-muted">-</span>
                  {{/if}}
                </td>
                <td>
                  {{#if soldDate}}
                    <span class="badge bg-success">Sold</span>
                  {{else}}
                    <span class="badge bg-warning text-dark">Available</span>
                  {{/if}}
                </td>
                <td>{{#if soldDate}}{{formatDate soldDate}}{{else}}<span class="text-muted">-</span>{{/if}}</td>
                <td class="text-center">
                  <a class="btn btn-sm btn-outline-info action-btn" href="/products/{{_id}}">
                    <i class="bi bi-eye"></i> View
                  </a>
                  <a class="btn btn-sm btn-outline-primary action-btn" href="/products/{{_id}}/edit">
                    <i class="bi bi-pencil"></i> Edit
                  </a>
                </td>
              </tr>
            {{/each}}
          {{else}}
            <tr>
              <td colspan="9" class="text-center py-4">
                <i class="bi bi-inbox fs-1 text-muted"></i>
                <p class="text-muted mt-2">No products found</p>
              </td>
            </tr>
          {{/if}}
        </tbody>
      </table>
    </div>
  </div>
</div>

<div class="d-flex justify-content-center mt-4">
  {{{pagination pagination}}}
</div>

{{#section 'script'}}
<script>
// Add loading overlay for filtering
const filterForm = document.querySelector('form[action="/products"]');
const tableCard = document.querySelector('.card');

if (filterForm) {
  filterForm.addEventListener('submit', function(e) {
    // Show loading state in table
    if (tableCard) {
      const tableBody = tableCard.querySelector('tbody');
      if (tableBody) {
        tableBody.innerHTML = `
          <tr>
            <td colspan="9" class="text-center py-5">
              <div class="spinner-border text-primary" role="status">
                <span class="visually-hidden">Loading...</span>
              </div>
              <p class="mt-3 text-muted">Loading products...</p>
            </td>
          </tr>
        `;
      }
    }
  });
}

// Add loading state for edit buttons
document.querySelectorAll('a[href*="/edit"]').forEach(link => {
  link.addEventListener('click', function(e) {
    // Create a small spinner next to the button
    const spinner = document.createElement('span');
    spinner.className = 'spinner-border spinner-border-sm ms-2';
    spinner.innerHTML = '<span class="visually-hidden">Loading...</span>';
    this.appendChild(spinner);
    
    // Disable the link
    this.style.pointerEvents = 'none';
    this.style.opacity = '0.6';
  });
});

// Add loading indicator for pagination links
document.querySelectorAll('.pagination a').forEach(link => {
  link.addEventListener('click', function(e) {
    // Show loading in table
    if (tableCard) {
      const tableBody = tableCard.querySelector('tbody');
      if (tableBody) {
        // Add loading overlay over the table
        const overlay = document.createElement('div');
        overlay.className = 'position-absolute top-0 start-0 w-100 h-100 d-flex align-items-center justify-content-center';
        overlay.style.background = 'rgba(255,255,255,0.8)';
        overlay.style.zIndex = '10';
        overlay.innerHTML = `
          <div class="text-center">
            <div class="spinner-border text-primary" role="status">
              <span class="visually-hidden">Loading...</span>
            </div>
            <p class="mt-2 text-muted">Loading page...</p>
          </div>
        `;
        tableCard.style.position = 'relative';
        tableCard.appendChild(overlay);
      }
    }
  });
});
</script>
{{/section}}
