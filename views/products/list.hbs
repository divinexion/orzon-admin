    <div class="stats-card">
      <div class="d-flex align-items-center">
        <i class="bi bi-archive fs-1 me-3" style="color: #ffc107;"></i>
        <div>
          <h3>{{stats.totalUnsold}}</h3>
          <p class="mb-0">In Stock</p>
        </div>
      </div>
    </div>
  </div> --}}
  <div class="col-lg-3 col-md-6 mb-3">
