{{#section 'style'}}
<style>
  .detail-label { font-weight: 600; color: #495057; }
  .detail-value { color: #212529; }
  .status-badge { font-size: 1rem; padding: 0.5rem 1rem; }
</style>
{{/section}}

<div class="row">
  <div class="col-lg-8">
    <div class="card">
      <div class="card-header d-flex justify-content-between align-items-center">
        <h4 class="mb-0">Query Details</h4>
        {{#if query.isResolved}}
          <span class="badge status-badge bg-success">Resolved</span>
        {{else}}
          <span class="badge status-badge bg-warning text-dark">Pending</span>
        {{/if}}
      </div>
      <div class="card-body">
        <div class="row mb-3">
          <div class="col-md-3">
            <span class="detail-label">Name:</span>
          </div>
          <div class="col-md-9">
            <span class="detail-value">{{query.name}}</span>
          </div>
        </div>
        
        <div class="row mb-3">
          <div class="col-md-3">
            <span class="detail-label">Description:</span>
          </div>
          <div class="col-md-9">
            <span class="detail-value">{{query.description}}</span>
          </div>
        </div>
        
        {{#if query.productSerialNumber}}
          <div class="row mb-3">
            <div class="col-md-3">
              <span class="detail-label">Product Serial:</span>
            </div>
            <div class="col-md-9">
              <span class="detail-value">{{query.productSerialNumber}}</span>
            </div>
          </div>
        {{/if}}
        
        <div class="row mb-3">
          <div class="col-md-3">
            <span class="detail-label">Submitted:</span>
          </div>
          <div class="col-md-9">
            <span class="detail-value">{{formatDate query.createdAt}}</span>
          </div>
        </div>
        
        {{#if query.isResolved}}
          <div class="row mb-3">
            <div class="col-md-3">
              <span class="detail-label">Resolved:</span>
            </div>
            <div class="col-md-9">
              <span class="detail-value">{{formatDate query.resolvedAt}}</span>
            </div>
          </div>
        {{/if}}
        
        <div class="row mb-3">
          <div class="col-md-3">
            <span class="detail-label">Query ID:</span>
          </div>
          <div class="col-md-9">
            <span class="detail-value text-muted">{{query._id}}</span>
          </div>
        </div>
      </div>
      <div class="card-footer">
        <div class="d-flex gap-2">
          <form method="post" action="/queries/{{query._id}}/toggle-status">
            <button type="submit" class="btn btn-{{#if query.isResolved}}warning{{else}}success{{/if}}">
              {{#if query.isResolved}}Mark as Pending{{else}}Mark as Resolved{{/if}}
            </button>
          </form>
          <form method="post" action="/queries/{{query._id}}/delete" onsubmit="return confirm('Are you sure you want to delete this query?');">
            <button type="submit" class="btn btn-danger">Delete Query</button>
          </form>
          <a href="/queries" class="btn btn-secondary">Back to List</a>
        </div>
      </div>
    </div>
  </div>
  
  <div class="col-lg-4">
    {{#if product}}
      <div class="card">
        <div class="card-header">
          <h5 class="mb-0">Related Product</h5>
        </div>
        <div class="card-body">
          <dl class="row mb-0">
            <dt class="col-sm-5">Name:</dt>
            <dd class="col-sm-7">{{product.name}}</dd>
            
            <dt class="col-sm-5">Type:</dt>
            <dd class="col-sm-7">{{product.productType}}</dd>
            
            <dt class="col-sm-5">Capacity:</dt>
            <dd class="col-sm-7">{{product.typeCapacity}}</dd>
            
            {{#if product.buyer.name}}
              <dt class="col-sm-5">Buyer:</dt>
              <dd class="col-sm-7">{{product.buyer.name}}</dd>
            {{/if}}
            
            {{#if product.soldDate}}
              <dt class="col-sm-5">Sold Date:</dt>
              <dd class="col-sm-7">{{formatDate product.soldDate}}</dd>
            {{/if}}
          </dl>
          <a href="/products/{{product._id}}/edit" class="btn btn-sm btn-outline-primary w-100">View Product</a>
        </div>
      </div>
    {{else}}
      {{#if query.productSerialNumber}}
        <div class="alert alert-warning">
          <h5 class="alert-heading">Product Not Found</h5>
          <p class="mb-0">No product found with serial number: <strong>{{query.productSerialNumber}}</strong></p>
        </div>
      {{/if}}
    {{/if}}
    
    <div class="card mt-3">
      <div class="card-header">
        <h5 class="mb-0">Quick Actions</h5>
      </div>
      <div class="card-body">
        <div class="d-grid gap-2">
          {{#if query.productSerialNumber}}
            {{#unless product}}
              <a href="/products/new" class="btn btn-outline-primary">Create Product with Serial</a>
            {{/unless}}
          {{/if}}
          <a href="/queries" class="btn btn-outline-secondary">View All Queries</a>
        </div>
      </div>
    </div>
  </div>
</div>
